<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    >
    <ImageView
        android:id="@+id/page_cat"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:background="@drawable/cat_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="TODO"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/show_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_main_bt_show"
        android:textColor="@color/black"
        android:background="@drawable/bt_background"
        app:layout_constraintTop_toTopOf="@id/page_cat"
        app:layout_constraintLeft_toLeftOf="@id/page_cat"
        app:layout_constraintRight_toRightOf="@id/page_cat"
        android:layout_marginTop="180dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saved_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_main_bt_saved"
        android:textColor="@color/white"
        android:background="@drawable/bt_background"
        app:layout_constraintTop_toBottomOf="@+id/show_cat"
        app:layout_constraintLeft_toLeftOf="@id/page_cat"
        app:layout_constraintRight_toRightOf="@id/page_cat"
        android:layout_marginTop="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>